{
  "name": "xh-win-tools",
  "private": true,
  "version": "1.0.0",
  "main": "./electron/main/main.js",
  "description": "electron+vite+vue3+electon-builder demo",
  "author": "星海",
  "license": "MIT",
  "scripts": {
    "dev:vue": "vite",
    "build:vue": "vite build",
    "preview": "vite preview",
    "start": "nodemon --exec electron --inspect=5858 . --watch ./ --ext .js,.html,.css",
    "deva": "npm-run-all --parallel dev:vue start",
    "build:e": "electron-builder",
    "dista": "vite build && electron-builder",
    "dev": "node ./public/build.js dev && npm-run-all --parallel dev:vue start",
    "build": "npm run build:vue && node ./public/build.js build &&  npm run build:e"
  },
  "build": {
    "productName": "xh-win-tools",
    "appId": "xh-win-tools",
    "asar": false,
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "./public/electron/installer.nsh"
    },
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "icon": "./public/electron/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "arm64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^0.27.2",
    "crypto-js": "^4.2.0",
    "form-data": "^4.0.0",
    "lodash": "^4.17.21",
    "pinia": "^2.0.22",
    "qs": "^6.11.0",
    "view-ui-plus": "^1.3.1",
    "vue": "^3.2.37",
    "vue-i18n": "^9.3.0-beta.16",
    "vue-router": "^4.1.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@intlify/vite-plugin-vue-i18n": "^7.0.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitejs/plugin-vue": "^3.1.0",
    "electron": "^20.1.4",
    "electron-builder": "^23.3.3",
    "less": "^4.1.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "vite": "^3.1.0"
  }
}